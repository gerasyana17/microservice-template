{
    "compilerOptions": {
        "module": "commonjs",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowJs": true,
        "target": "ES6",
        "outDir": "./dist",
        "baseUrl": "./src",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports" : true,
        "declaration": true,
        "noImplicitAny": true,
        "types": ["reflect-metadata"]
    },
    "include": [
        "*.ts",
        "src/**/*.ts",
        "shared/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}